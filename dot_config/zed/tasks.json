[
	{
		"args": ["--engine=lualatex", "--synctex=1", "--shell-escape", "$ZED_FILE"],
		"command": "cluttex",
		"cwd": "$ZED_DIRNAME",
		"label": "ClutTeX (LuaLaTeX)",
		"tags": ["latex-build"],
		"use_new_terminal": true
	},
	{
		"args": [
			"--engine=lualatex",
			"--synctex=1",
			"--shell-escape",
			"--biber",
			"$ZED_FILE"
		],
		"command": "cluttex",
		"cwd": "$ZED_DIRNAME",
		"label": "ClutTeX (LuaLaTeX) with Biber",
		"tags": ["latex-build"],
		"use_new_terminal": true
	},
	{
		"args": [
			"-X",
			"compile",
			"$ZED_FILENAME",
			"--untrusted",
			"--synctex",
			"--keep-logs",
			"--keep-intermediates"
		],
		"command": "tectonic",
		"cwd": "$ZED_DIRNAME",
		"label": "tectonic",
		"tags": ["latex-build"],
		"use_new_terminal": true
	},
	{
		"allow_concurrent_runs": true,
		"command": "zathura \"$ZED_STEM.pdf\"",
		"cwd": "$ZED_DIRNAME",
		"label": "Open PDF in Zathura",
		"tags": ["latex-build"],
		"use_new_terminal": false
	}
]
