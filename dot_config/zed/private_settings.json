{
    "theme": {
        "mode": "dark",
        "light": "Catppuccin Latte",
        "dark": "Catppuccin Macchiato"
    },
    "icon_theme": "Catppuccin Macchiato",
    "base_keymap": "VSCode",
    "features": {
        "edit_prediction_provider": "copilot"
    },
    "buffer_font_family": "HackGen Console NF",
    "buffer_font_size": 14,
    "buffer_line_height": "comfortable",
    "ui_font_family": "Noto Sans CJK JP",
    "ui_font_size": 15,
    "agent_font_size": null,
    "bottom_dock_layout": "contained",
    "image_viewer": {
        "unit": "binary"
    },
    "vim_mode": false,
    "hover_popover_enabled": true,
    "hover_popover_delay": 300,
    "confirm_quit": false,
    "restore_on_startup": "last_session",
    "restore_on_file_reopen": true,
    "close_on_file_delete": false,
    "when_closing_with_no_tabs": "platform_default",
    "on_last_window_closed": "platform_default",
    "use_system_path_prompts": true,
    "use_system_prompts": true,
    "cursor_blink": true,
    "cursor_shape": "bar",
    "hide_mouse": "on_typing_and_movement",
    "current_line_highlight": "all",
    "selection_highlight": true,
    "rounded_selection": true,
    "show_completions_on_input": true,
    "show_completion_documentation": true,
    "inline_code_actions": true,
    "snippet_sort_order": "inline",
    "use_on_type_format": true,
    "use_autoclose": true,
    "use_auto_surround": true,
    "auto_indent": true,
    "auto_indent_on_paste": true,
    "always_treat_brackets_as_autoclosed": false,
    "show_edit_predictions": true,
    "show_whitespaces": "all",
    "scrollbar": {
        "show": "system",
        "cursors": true,
        "git_diff": true,
        "search_results": true,
        "selected_text": true,
        "selected_symbol": true,
        "diagnostics": "all",
        "axes": {
            "horizontal": true,
            "vertical": true
        }
    },
    "minimap": {
        "show": "never"
    },
    "indent_guides": {
        "enabled": true,
        "line_width": 1,
        "active_line_width": 1,
        "coloring": "fixed",
        "background_coloring": "indent_aware"
    },
    "file_scan_exclusions": [],
    "resize_all_panels_in_dock": ["left"],
    "project_panel": {
        "button": true,
        "default_width": 240,
        "dock": "left",
        "entry_spacing": "comfortable",
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "indent_size": 20,
        "auto_reveal_entries": true,
        "auto_fold_dirs": false,
        "sticky_scroll": true,
        "drag_and_drop": true,
        "scrollbar": {
            "show": "system"
        },
        "show_diagnostics": "all",
        "indent_guides": {
            "show": "always"
        },
        "hide_root": false
    },
    "outline_panel": {
        "button": true,
        "default_width": 240,
        "dock": "left",
        "file_icons": true,
        "folder_icons": true,
        "git_status": true,
        "indent_size": 20,
        "auto_reveal_entries": true,
        "auto_fold_dirs": true,
        "indent_guides": {
            "show": "always"
        },
        "scrollbar": {
            "show": "system"
        },
        "expand_outlines_with_depth": 100
    },
    "collaboration_panel": {
        "button": true,
        "dock": "left",
        "default_width": 240
    },
    "chat_panel": {
        "button": "always",
        "dock": "right",
        "default_width": 240
    },
    "git_panel": {
        "button": true,
        "dock": "left",
        "default_width": 240,
        "status_style": "icon",
        "fallback_branch_name": "main",
        "sort_by_path": false,
        "collapse_untracked_diff": false,
        "scrollbar": {
            "show": "system"
        }
    },
    "message_editor": {
        "auto_replace_emoji_shortcode": true
    },
    "notification_panel": {
        "button": true,
        "dock": "right",
        "default_width": 380
    },
    "agent": {
        "enabled": true,
        "button": true,
        "dock": "right",
        "default_width": 640,
        "always_allow_tool_actions": true,
        "stream_edits": true,
        "default_profile": "ask",
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-4.1"
        }
    },
    "terminal": {
        "shell": "system",
        "dock": "bottom",
        "button": true,
        "default_height": 320,
        "working_directory": "current_project_directory",
        "blinking": "on",
        "cursor_shape": "bar",
        "scrollbar": {
            "show": "system"
        },
        "font_family": "HackGen Console NF",
        "font_size": 14,
        "font_weight": 400,
        "line_height": "standard",
        "detect_venv": {
            "on": {
                "directories": [".env", "env", ".venv", "venv"],
                "activate_script": "default"
            }
        },
        "max_scroll_history_lines": 10000
    },
    "show_call_status_icon": true,
    "enable_language_server": true,
    "linked_edits": true,
    "remove_trailing_whitespace_on_save": true,
    "extend_comment_on_newline": true,
    "ensure_final_newline_on_save": true,
    "format_on_save": "on",
    "soft_wrap": "editor_width",
    "hard_tabs": false,
    "tab_size": 4,
    "disable_ai": false,
    "auto_update": true,
    "lsp_document_colors": "inlay",
    "status_bar": {
        "active_language_button": true,
        "cursor_position_button": true
    },
    "auto_install_extensions": {
        "html": true,
        "catppuccin": true,
        "catppuccin-icons": true,
        "ruff": true,
        //"ty": true,
        "tombi": true,
        "latex": true,
        "nix": true,
        "rainbow-csv": true,
        "ini": true,
        "air": true,
        "r": true,
        "markdownlint": true,
        "biome": true,
        "fish": true
    },
    "formatter": "auto",
    "lsp": {
        "biome": {
            "settings": {
                "require_config_file": true,
                "config_path": "~/.config/zed/biome.json"
            }
        },
        "ruff": {
            "initialization_options": {
                "settings": {
                    "lineLength": 80,
                    "lint": {
                        "extendSelect": ["I"]
                    }
                }
            }
        }
        //"ty": {
        //    "settings": {
        //        "ty": {
        //            "disableLanguageServices": true
        //        }
        //    }
        //}
    },
    "languages": {
        "JavaScript": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true
            }
        },
        "TypeScript": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true
            }
        },
        "TSX": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true
            }
        },
        "JSON": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true
            }
        },
        "JSONC": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true
            }
        },
        "CSS": {
            "formatter": {
                "language_server": {
                    "name": "biome"
                }
            },
            "code_actions_on_format": {
                "source.fixAll.biome": true,
                "source.organizeImports.biome": true
            }
        },
        "Markdown": {
            "remove_trailing_whitespace_on_save": false
        },
        "Python": {
            "language_servers": [/*"ty",*/ "ruff"],
            "format_on_save": "on",
            "formatter": [
                {
                    "code_actions": {
                        "source.organizeImports.ruff": true,
                        "source.fixAll.ruff": true
                    }
                },
                {
                    "language_server": {
                        "name": "ruff"
                    }
                }
            ]
        },
        "R": {
            "language_servers": ["air", "r_language_server"],
            "use_on_type_format": false
        },
        "Shell Script": {
            "format_on_save": "on",
            "formatter": {
                "external": {
                    "command": "shfmt",
                    "arguments": [
                        "--filename",
                        "{buffer_path}",
                        "--indent",
                        "2"
                    ]
                }
            }
        }
    }
}
