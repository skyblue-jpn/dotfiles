#!/bin/bash
# Apply dconf settings from dconf/settings.ini.
# dconf/settings.ini hash: {{ include "dconf/settings.ini" | sha256sum }}

set -eufo pipefail

# Ensure dconf is installed
if ! command -v dconf &>/dev/null; then
  echo "ğŸ” dconf not found, installing..."
  paru -S --needed dconf
  if [ $? -ne 0 ]; then
    echo "âŒ Failed to install dconf. Exiting script, chezmoi apply will continue."
    exit 0
  fi
else
  echo "âœ… dconf is already installed."
fi

echo "ğŸš€ Applying dconf settings..."
dconf load / <"{{ joinPath .chezmoi.sourceDir "dconf/settings.ini" }}"
if [ $? -eq 0 ]; then
  echo "âœ… dconf settings applied."
else
  echo "âŒ Failed to apply dconf settings. Exiting script, chezmoi apply will continue."
  exit 0
fi

# End of script
