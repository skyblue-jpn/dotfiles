#!/bin/bash
# Install packages from dot_config/mise/config.toml using mise.
# dot_config/mise/config.toml hash: {{ include "dot_config/mise/config.toml" | sha256sum }}

set -eufo pipefail

# Ensure mise is installed
if ! command -v mise &>/dev/null; then
  echo "ğŸ” mise not found, installing..."
  paru -S --needed mise
  if [ $? -ne 0 ]; then
    echo "âŒ Failed to install mise. Exiting script, chezmoi apply will continue."
    exit 0
  fi
else
  echo "âœ… mise is already installed."
fi

echo "ğŸ“¦ Installing packages from mise/config.toml..."
mise install
if [ $? -eq 0 ]; then
  echo "âœ… Package installation complete."
else
  echo "âŒ Package installation failed. Exiting script, chezmoi apply will continue."
  exit 0
fi

# End of script
