#!/bin/bash
# Install Rust toolchain, cargo utilities, and packages from pkglist.txt.

set -eufo pipefail

# Install rustup if not already installed
if ! command -v rustup &>/dev/null; then
  echo "🔍 rustup not found, installing..."
  paru -S --needed rustup
  if [ $? -ne 0 ]; then
    echo "❌ Failed to install rustup. Exiting script, chezmoi apply will continue."
    exit 0
  fi
else
  echo "✅ rustup is already installed."
fi

# Reload shell environment to recognize rustup
export PATH="$HOME/.cargo/bin:$PATH"

echo "🔧 Setting Rust toolchain to stable..."
rustup default stable
if [ $? -ne 0 ]; then
  echo "❌ Failed to set Rust toolchain. Exiting script, chezmoi apply will continue."
  exit 0
fi

# Install cargo-update
echo "📦 Installing cargo-update..."
cargo install cargo-update
if [ $? -ne 0 ]; then
  echo "❌ Failed to install cargo-update. Exiting script, chezmoi apply will continue."
  exit 0
fi

# Install cargo-cache
echo "📦 Installing cargo-cache..."
cargo install cargo-cache
if [ $? -ne 0 ]; then
  echo "❌ Failed to install cargo-cache. Exiting script, chezmoi apply will continue."
  exit 0
fi

# Install desired packages from pkglist.txt
echo "📦 Installing packages from pkglist.txt..."
paru -Syyu --needed --noconfirm - <"{{ joinPath .chezmoi.sourceDir "package-lists/pkglist.txt" }}"
if [ $? -ne 0 ]; then
  echo "❌ Failed to install packages from pkglist.txt. Exiting script, chezmoi apply will continue."
  exit 0
fi

# Clear the package cache
echo "🧹 Clearing package cache..."
paru -Sc --noconfirm

echo "📦 Installing with mise..."
mise install
if [ $? -ne 0 ]; then
  echo "❌ Failed to run mise install. Exiting script, chezmoi apply will continue."
  exit 0
fi

echo "📱 Initializing waydroid..."
if [ "$EUID" -ne 0 ]; then
  sudo waydroid init
else
  waydroid init
fi
if [ $? -ne 0 ]; then
  echo "❌ Failed to initialize waydroid. Exiting script, chezmoi apply will continue."
  exit 0
fi

# End of script
