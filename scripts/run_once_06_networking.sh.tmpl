#!/bin/bash
# This script is intended to be run once to set up networking on a new system.

set -euo pipefail

# Enable IP forwarding
echo "Enabling IP forwarding and configuring UFW..."
sudo sysctl -w net.ipv4.ip_forward=1
sudo ufw allow 53
sudo ufw allow 67
sudo ufw default allow FORWARD
sudo ufw enable
if [ $? -ne 0 ]; then
  echo "‚ùå Failed to enable UFW or set IP forwarding. Exiting script, chezmoi apply will continue."
  exit 0
fi

# End of script
